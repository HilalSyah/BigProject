<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#79000000"
    tools:context=".SettingsFragment"
    android:backgroundTint="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >


        <ImageView
            android:id="@+id/judul"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45dp"
            android:src="@drawable/volumebangunruang"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/img1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@+id/judul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img2"
            app:layout_constraintBottom_toTopOf="@+id/img3"
            >

            <ImageView
                android:id="@+id/kubus"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/kubus"></ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp"
            app:layout_constraintTop_toBottomOf="@+id/judul"
            app:layout_constraintStart_toEndOf="@+id/img1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/img4"
            >

            <ImageView
                android:id="@+id/kerucut"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:src="@drawable/krucut"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" >
            </ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img3"
            app:layout_constraintTop_toBottomOf="@+id/img1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img4"
            app:layout_constraintBottom_toTopOf="@+id/img5"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/limas"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:src="@drawable/limas"></ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img4"
            app:layout_constraintTop_toBottomOf="@+id/img2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img3"
            app:layout_constraintBottom_toTopOf="@+id/img6"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/balok"
                android:layout_width="115dp"
                android:layout_height="100dp"
                android:src="@drawable/balok"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp" >
            </ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img5"
            app:layout_constraintTop_toBottomOf="@+id/img3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/bola"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/bola"></ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/img6"
            app:layout_constraintTop_toBottomOf="@id/img4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/tabung"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/tabung"></ImageView>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>